init_config:

instances:
    # For every instance, you have an `lighttpd_status_url` and (optionally)
    # a list of tags.

    -   lighttpd_status_url: http://example.com/server-status/
        tags:
            -   instance:foo

    -   lighttpd_status_url: http://example2.com:1234/server-status/
        tags:
            -   instance:bar
